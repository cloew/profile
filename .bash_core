#! /usr/bin/bash

export dev_dir="$root_dir/dev"
export ide_dir="$root_dir/IDEs"
export test_dir="$dev_dir/Test"

# Paths to current project
#export src=$pkmn_src
#export test=$pkmn_test
#export rsrc=$pkmn_rsrc
#export cb="GUI-Refactor"
export src=""
export test=""
export rsrc=""
export cb=""

# Aliases

# Core Aliases
alias adev="cd $dev_dir"
alias aIDEs="cd $ide_dir"
alias atest="cd $test_dir"
alias q="exit"

# Git Aliases
alias gi="git init"
alias grao="git remote add origin"
alias grro="git remote rm origin"
alias gb="git branch"
alias gch="git checkout"
alias gm="git merge"
alias ga="git add"
alias gaf="ga -f"
alias gcm="git commit -m"
alias gps="git push"
alias gpsom="git push -u origin master"
alias gpscb="git push origin $cb"
alias gpl="git pull"
alias gplom="git pull origin master"
alias gplcb="git pull origin $cb"
alias gs="git status"
alias grm="git rm"
alias gmv="git mv"

# Python Aliases
alias py="python"
alias m="python main.py"
alias t="python test.py"
alias py-install="python setup.py install"
alias mktest="cp $src/Test/testcase_template.py"
alias mktestdir="bash mkTestDir.sh"
alias wp="/$c_drive/Python26/python.exe"
alias wm="wp main.py"
alias wt="wp test.py"

# Rails Aliases
alias rs="rails server"
alias rgs="rails generate scaffold"

# Notepad++ Aliases
alias np="run $ide_dir/Notepad++/notepad++.exe"
alias np-new="np -multiInst -nosession"

# Profile Alias
alias brc="npm $profile"

# SQLite Alias
alias ss="sqlitestudio.exe &"

# Generic Helper Functions
function asrc() {
    cd $src
}

function start() {
    asrc
    if [ ! -z "$test" ]; then
        np-test
    fi
    sleep 1
    if [ ! -z "$rsrc" ]; then
        np-rsrc
    fi
    sleep 1
    npm
}

# Git Helpers
function g-start() {
    gi
    grao $1
    gpl origin master
    gps -u origin master
}

# Notepad Functions
function npm() {
    np -multiInst &
}

function np-w() {
	np-new $(w-path $@)
}

function np-test() {
    paths="$(cygpath -w $test)"
    np-new $paths &
}

function np-rsrc() {
    paths="$(cygpath -w $rsrc)"
    np-new $paths &
}

# Python Functions
function mkpydir() {
    mkdir $1
    touch $1/__init__.py
}

function mktestdir() {
    mkpydir $1
    touch $1/suite.py
}

function get-pip {
	curl http://python-distribute.org/distribute_setup.py | python
	rm distribute-0.6.30.tar.gz
	curl https://raw.github.com/pypa/pip/master/contrib/get-pip.py | python
}

# Ruby Functions
function get-rails {
	# Install Required packages
	install make gcc4 sqlite3 libsqlite3_0 libsqlite3-devel
	
	# Get Ruby Gems
	wget http://production.cf.rubygems.org/rubygems/rubygems-1.8.10.tgz
	tar xvfz rubygems-1.8.10.tgz
	cd rubygems-1.8.10
	ruby setup.rb
	cd ..
	rm rubygems-1.8.10.tgz
	rm -rf rubygems-1.8.10
	
	# Get Rails
	gem install rails sqlite3-ruby
}
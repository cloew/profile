# Generic Helper Functions
function asrc() {
    cd $src
}

# Git Helpers
function g-new() {
    gi
    grao $1
    touch README
    ga README
    gcm 'Adding README file'
    gps -u origin master
}

function g-start() {
    gi
    grao $1
    gpl origin master
    gps -u origin master
}

function mkgitdir () {
    mkdir $1
    cd $1
    g-start $2
}

function gnb() {
    gb $1
    gch $1
    gps -u origin $1
}

function gpb() {
    gb $1
    gch $1
    gpl -u origin $1
}

function gmv-py() {
    gmv $1 $2
    rm  $1c
}

function grm-py() {
    grm $1
    rm  $1c
}

function mkgitdir () {
    mkdir $1
    cd $1
    g-start $2
}

function mkgitdirAndInstall () {
    mkgitdir $1 $2
    cd src/
    py-install
}

# SVN Helpers
function scm-shells() {
    sa $@
    scm $@ -m "shells"
}

# Django-NonRel Helpers
function deploy {
  cp app.yaml.prod app.yaml
  dj-collectstatic
  echo "no" | dj-deploy
  cp app.yaml.dev app.yaml
}

# Notepad Functions
function np-multi() {
    np -multiInst &
}

function np-w() {
	np-new $(w-path $@)
}

function np-test() {
    paths="$(cygpath -w $test)"
    np-new $paths &
}

function np-rsrc() {
    paths="$(cygpath -w $rsrc)"
    np-new $paths &
}

# Python Functions
function mkpydir() {
    mkdir $1
    touch $1/__init__.py
}

function mktestdir() {
    mkpydir $1
    touch $1/suite.py
}

function get-pip {
    python="$1"
    if [ -z "$python" ]
        then python="python"
    fi
    
	curl http://python-distribute.org/distribute_setup.py | $1
	rm distribute-0.6.30.tar.gz
	curl $pipUrl | $1
}

# Ruby Functions
function get-rails {
	# Install Required packages
	install make gcc4 sqlite3 libsqlite3_0 libsqlite3-devel
	
	# Get Ruby Gems
	wget http://production.cf.rubygems.org/rubygems/rubygems-1.8.10.tgz
	tar xvfz rubygems-1.8.10.tgz
	cd rubygems-1.8.10
	ruby setup.rb
	cd ..
	rm rubygems-1.8.10.tgz
	rm -rf rubygems-1.8.10
	
	# Get Rails
	gem install rails sqlite3-ruby
}

# Project Builders
function mk-py-package  {
    mkgitdir $1 $2
    pbf new pbf-properties -c python
    mkdir src
    pbf mk py-package src/ $3
    ga src
    gcm 'Added Boilerplate Package code'
    gps
}
function mk-pbf-package  {
    mkgitdir $1 $2
    pbf mk pbf-package . $3
    ga .
    gcm 'Added Boilerplate PBF Package code'
    gps
}
#! /usr/bin/bash

# Kao Tessur Paths
export kao_dir="$dev_dir/KaoTessur"
export kao_games_dir="$kao_dir/Games"
export kao_lib_dir="$kao_dir/Libraries"
export kao_pbf_dir="$kao_lib_dir/PBF"

# Toggl Settings
export toggl_personal_ws="Personal Projects"
export toggl_experimentation_ws="Experimentation"

# Deck Building Paths
export deck_building_dir=$kao_games_dir/DeckBuilding
export deck_building_src=$deck_building_dir/src

# Galaga Paths
export galaga_dir=$kao_games_dir/GalagaEsque

# Kao Console paths
export kao_console_dir=$kao_lib_dir/KaoConsole

# Kao GUI paths
export kao_gui_dir=$kao_lib_dir/KaoGUI

# Kao Runner paths
export kao_runner_dir=$kao_lib_dir/KaoPyRunner

# LOL Code Parser Paths
export lol_code_parser_dir=$kao_dir/LOLCodeParser

# Nyt Owl paths
export nytowl_dir=$kao_dir/NytOwlTextEditor
export nytowl_src=$nytowl_dir/src

# Pandemic Paths
export pandemic_dir=$kao_games_dir/Pandemic
export pandemic_src=$pandemic_dir/src

# Personal Accounting Software paths
export personal_accounting_dir=$kao_dir/PersonalAccountingSoftware
export personal_accounting_src=$personal_accounting_dir/src

# Pokemon paths
export pkmn_dir=$kao_games_dir/PokemonPython
export pkmn_src=$pkmn_dir/src
export pkmn_test=$pkmn_src/test.py\ $pkmn_src/Test/test_helper.py
export pkmn_rsrc=$pkmn_src/resources/trainerdex.xml\ $pkmn_src/resources/attackdex.xml\ $pkmn_src/resources/pokedex.xml\ $pkmn_src/resources/abilitydex.xml\ $pkmn_src/resources/tags.py

# Programmer's Best Friend paths
export pbf_dir=$kao_pbf_dir/ProgrammersBestFriend
export pbf_src=$pbf_dir/pbf

# PyMine paths
export pymine_src=$kao_games_dir/PyMine/src
export pymine2_src=$kao_games_dir/PyMine2/src

# Rant dir
export rant_dir=$kao_dir/Rants
export avatar_rant_dir=$rant_dir/Avatar
export YJ_rant_dir=$rant_dir/Young_Justice

# Kao Tessur Commands
alias akao="cd $kao_dir"
alias akaogames="cd $kao_games_dir"
alias akaolib="cd $kao_lib_dir"

# Deck building Commands
alias a-deckbuilding="cd $deck_building_src"
alias db-startgame='curl -i -H "Content-Type: application/json" -X POST http://127.0.0.1:5000/api/startgame'
alias db-play='curl -i -H "Content-Type: application/json" -X POST -d '"'"'{"index":0}'"'"' http://127.0.0.1:5000/api/game/1/play'

# Galaga Commands
alias a-galaga="cd $galaga_dir"

# Kao GUI Commands
alias a-kaogui="cd $kao_gui_dir"

# Kao GUI Commands
alias a-runner="cd $kao_runner_dir"

# LOL Code Commands
alias a-lolcode="cd $lol_code_parser_dir"

# Nyt Owl Commands
alias note="python -u $nytowl_src/main.py"
alias a-nytowl="cd $nytowl_src"
alias s-nytowl="nytowl; start"
alias rant="cd $rant_dir; note"
alias avatar-rant="cd $avatar_rant_dir; note"
alias yj-rant="cd $YJ_rant_dir; note"

# Pandemic Commands
alias a-pan="cd $pandemic_src"

# Personal Accounting Commands
alias a-pas="cd $personal_accounting_src"

# Pkmn Commands
alias a-pkmn="cd $pkmn_src"
alias s-pkmn="pkmn; start"
alias db="python dbtest.py"
alias aac="python pkmn_db_front.py ADD ATTACK"
alias mkeffect="bash $poke_src/scripts/mkeffect.sh"

# PBF Commands
alias a-pbf="cd $pbf_dir"
alias pbf-dev="python $pbf_dir/main.py"

# PyMine Commands
alias a-pymine="cd $pymine_src"
alias a-pymine2="cd $pymine2_src"
alias s-pymine="pymine; start"

# Project Functions
function pkmn() {
    src=$poke_src
    test=$poketest
    rsrc=$pokersrc
}

function nytowl() {
    src=$nytowl_src
    test=""
    rsrc=""
}

function pymine() {
    src=$pymine_src
    test=""
    rsrc=""
}